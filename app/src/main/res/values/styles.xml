<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rel_start_content" parent="rel_start_content_base"/>
    <style name="rel_start_content_base">
        <item name="android:minHeight">@dimen/min_interactive_dim</item>
        <item name="android:minWidth">@dimen/min_interactive_dim</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
    </style>

</resources>
